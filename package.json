{
    "name": "wp-ppg-ufrgs",
    "version": "1.0.0",
    "description": "WordPress plugin for PPG UFRFGS",
    "main": "index.js",
    "scripts": {
        "watch:sass": "nodemon -e sass -x \"sass scss/main.scss css/style.css -w\"",
        "files.autoSave": "onFocusChange",
        "devserver": "live-server",
        "start": "npm-run-all --parallel devserver watch:sass",
        "compile:sass": "sass scss/main.scss css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
        "compress:css": "sass css/style.prefix.css css/style.css --output-style compressed",
        "build:css": "npm-run-all compile:sass prefix:css compress:css",
        "generate:sprite": "svg-icon-generate --folder=icons/svg --output=icons/icon-sheet.svg",
        "optimize:svg": "svgo -f icons/svg -o icons/svg"
    },
    "author": "Andrey",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": ">=10.4.8",
        "sass": ">=1.54.7",
        "nodemon": ">=2.0.19",
        "npm-run-all": ">=4.1.5",
        "postcss-cli": ">=10.0.0",
        "svgo": ">=2.8.0",
        "svg-icon-sprite": ">=1.1.1"
    },
    "dependencies": {
        "live-server": ">=1.2.2",
        "postcss": ">=8.4.16"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/andreyfsch/wp-ppg-front.git"
    },
    "bugs": {
        "url": "https://github.com/andreyfsch/wp-ppg-front/issues"
    },
    "homepage": "https://github.com/andreyfsch/wp-ppg-front#readme"
}